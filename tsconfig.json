{
	"compilerOptions": {
		"baseUrl": "src",
		"lib": ["esnext"],
		"noEmit": true,
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"module": "commonjs", // 'require' syntax makes HMR possible; 'import' doesn't
		"esModuleInterop": true, // Allow default-importing stuff like path
		"strict": true,
		"paths": {
			"@/secrets/*": ["./secrets/src/*"],
			"@/*": ["./*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["src/web/react/**/*"],
	"ts-node": {
		"require": ["tsconfig-paths/register"] // For path aliases
	}
}
