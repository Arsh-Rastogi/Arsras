{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"lib": ["es6"],
		"outDir": "dist",
		"baseUrl": "src",
		"allowUmdGlobalAccess": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"incremental": true,
		"moduleResolution": "nodenext"
	},
	"include": ["src/globals/*.d.ts", "src/**/*", "start.js"],
	"exclude": ["node_modules", "dist"]
}
